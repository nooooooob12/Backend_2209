{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${file}",
            "cwd": "${fileDirname}"
        },

        {
            "name": "Web: debug with attach to current opened-file for web source using chrome",
            "type": "pwa-chrome",
            "request": "attach",
            "port": 9222,
            "url": "127.0.0.1:3000/relativeFileDirname/{relativeFileDirname}/relativeFileDirname/{fileBasename}",
            "webRoot": "${workspaceFolder}"
        },
    ]
}